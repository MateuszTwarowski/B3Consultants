@inherits LayoutComponentBase

<PageTitle>B3ConsultantsUI</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 top-row dark" style="background-color:black">
            <div class="nav-item px-3">
                <NavLink class="nav-link" style="color:white" href="register" Match="NavLinkMatch.All">
                    <span class="oi oi-plus" aria-hidden="true"></span> Register
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" style="color:white" href="login" Match="NavLinkMatch.All">
                    <span class="oi oi-account-login" aria-hidden="true"></span> Login
                </NavLink>
            </div>

            <a href="https://www.b3.se/pl" target="_blank" style="color:white">B3 Official Website</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
